{
  "name": "react-state-arena",
  "version": "1.0.0",
  "private": true,
  "workspaces": [],
  "scripts": {
    "build": "pnpm -r build",
    "check": "pnpm lint:ci && pnpm typecheck && pnpm test && pnpm build",
    "dev:host": "pnpm --filter host_app dev",
    "dev:redux": "pnpm --filter redux_app dev",
    "dev:zustand": "pnpm --filter zustand_app dev",
    "dev:context": "pnpm --filter context_app dev",
    "dev:all": "pnpm -r --parallel dev",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "format": "pnpm biome format . --write",
    "lint": "pnpm biome check .",
    "lint:ci": "pnpm biome ci",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "jsdom": "^28.0.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  }
}
